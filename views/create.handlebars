<h1 class="mb-1 restaurant-show-title">新增餐廳名單</h1>

<div class="container mx-auto mt-5" style="max-width: 750px;">

  <div class="createNewRestaurantForm ">
    <form class="row g-3 mt-5 mx-5 " action="/restaurants" method="POST">
      <div class="col-md-6 mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" placeholder="餐廳名稱" name="name">
      </div>

      <div class="form-group col-md-3 ml-2">
        <label for="category">Category</label>
        <select id="category" class="form-control" name="category">
          <option selected>餐廳類型</option>
          <option>中東料理</option>
          <option>日本料理</option>
          <option>義式餐廳</option>
          <option>美式餐廳</option>
          <option>酒吧</option>
          <option>咖啡廳</option>
          <option>台菜料理</option>
          <option>飲料</option>
          <option>東南亞料理</option>
          <option>韓式料理</option>
        </select>
      </div>

      <div class="form-group col-12 mb-3">
        <label for="pictures" class="form-label">Pictures</label>
        <input type="text" class="form-control" id="pictures" placeholder="http://" name="pictures">
      </div>

      <div class="form-group col-12 mb-3">
        <label for="address" class="form-label">Address</label>
        <input type="text" class="form-control" id="address" placeholder="餐廳地址" name="address">
      </div>

      <div class="form-group col-12 mb-3">
        <label for="google_map" class="form-label">Google map </label>
        <input type="text" class="form-control" id="google_map" placeholder="Google map URL" name="google_map">
      </div>

      <div class="form-group col-md-6 mb-3">
        <label for="phone" class="form-label">Phone</label>
        <input type="text" class="form-control" id="phone" placeholder="餐廳電話" name="phone">
      </div>
      <div class="form-group col-md-6 mb-3">
        <label for="rating" class="form-label">Rating</label>
        <input type="string" class="form-control" id="rating" placeholder="餐廳評分：0.1 ~ 5.0" name="rating">
      </div>
      <div class="form-group col-md-12 mb-3">
        <label for="menu" class="form-label">Menu</label>
        <input type="text" class="form-control" id="menu" placeholder="http://" name="menu">
      </div>

      <div class=" col-12 form-group mb-3">
        <label for="description">Description</label>
        <textarea class="form-control" placeholder="餐廳敘述" id="description" name="description"></textarea>
      </div>

      <div class="form-group col-md-10 justify-content-start" style="margin-top: 10px;">
        <button type="submit" class="btn btn-info">Submit</button>
        <a href="/">
          <button type="button" class="btn btn-warning ml-3">Back</button>
        </a>
      </div>
    </form>

  </div>

</div>