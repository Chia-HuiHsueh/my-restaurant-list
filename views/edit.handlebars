<h1 class="mb-1 restaurant-show-title">編輯餐廳資訊</h1>

<div class="restaurant-edit container mx-auto mt-2 py-5 mb-5" style="max-width: 750px;">

  <div class="createNewRestaurantForm ">
    <form class="row g-3 mt-2 mx-5 " action="/restaurants/{{this._id}}?_method=PUT" method="POST">
      <div class="col-md-6 mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" placeholder="餐廳名稱" name="name" value="{{this.name}}" required>
      </div>
      <div class="form-group col-md-3 ml-2">
        <label for="category">Category</label>
        <select id="category" class=" form-control " name="category" required>
          <option value="{{this.category}}" selected>{{this.category}}</option>
          <option value="中東料理">中東料理</option>
          <option value="日本料理">日本料理</option>
          <option value="義式餐廳">義式餐廳</option>
          <option value="美式">美式</option>
          <option value="酒吧">酒吧</option>
          <option value="咖啡">咖啡</option>
          <option value="其他">其他</option>
        </select>
      </div>

      <div class="form-group col-12 mb-3">
        <label for="image" class="form-label">Pictures</label>
        <input type="text" class="form-control" id="image" placeholder="http://" name="image" value="{{this.image}}">
      </div>

      <div class="form-group col-12 mb-3">
        <label for="location" class="form-label">location</label>
        <input type="text" class="form-control" id="location" placeholder="餐廳地址" name="location"
          value="{{this.location}}" required>
      </div>

      <div class="form-group col-12 mb-3">
        <label for="google_map" class="form-label">Google map </label>
        <input type="text" class="form-control" id="google_map" placeholder="Google map URL" name="google_map"
          value="{{this.google_map}}" required>
      </div>

      <div class="form-group col-md-6 mb-3">
        <label for="phone" class="form-label">Phone</label>
        <input type="text" class="form-control" id="phone" placeholder="餐廳電話" name="phone" value="{{this.phone}}"
          required>
      </div>
      <div class="form-group col-md-6 mb-3">
        <label for="rating" class="form-label">Rating：0.1 ~ 5.0</label>
        <input type="number" class="form-control" id="rating" name="rating" min="0.1" max="5.0" placeholder="1.0"
          step="0.1" value="{{this.rating}}" required>
      </div>
      <div class=" form-group col-md-12 mb-3">
        <label for="menu" class="form-label">Menu</label>
        <input type="text" class="form-control" id="menu" placeholder="http://" name="menu" value="{{this.menu}}">
      </div>

      <div class=" col-12 form-group mb-3">
        <label for="description">Description</label>
        <input type="text" class="form-control" placeholder="餐廳敘述" id="description" name="description"
          value="{{this.description}}" required></input>
      </div>

      <div class="form-group col-md-10 justify-content-start" style="margin-top: 10px;">
        <a href="/restaurants/{{this._id}}" style="text-decoration:none;">
          <button type="submit" class="btn btn-info">Save</button>
        </a>
        <a href="/">
          <button type="button" class="btn  btn-light ml-3">Back</button>
        </a>
      </div>
    </form>

  </div>

</div>