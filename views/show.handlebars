<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>

<div class=" restaurant-show container py-5 mb-5">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.address}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mb-5">
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">
      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.menu}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">

    </div>
    <div class="col-12 col-md-10 mx-auto d-flex justify-content-end " style="max-width: 600px;">
      <a href="/">
        <span class="mx-2">
          <button type="button" class="btn btn-secondary ">Back</button>
        </span>
      </a>

      <form action="/restaurants/{{restaurant._id}}/edit" method="GET">
        <button type="submit" class="btn btn-primary mx-2">Edit</button>
      </form>
      <button type="button" class="btn btn-danger ml-2" data-toggle="modal" data-target="#deleteModal">Delete</button>

    </div>
    <!-- Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">NOTICE</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            確定要刪除【{{restaurant.name}}】這間餐廳？
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <form action="/restaurants/{{restaurant._id}}?_method=DELETE" method="POST">
              <button type="submit" class="btn btn-primary">Delete</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>